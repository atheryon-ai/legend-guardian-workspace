# =============================================================================
# MONGODB SPECIFIC CONFIGURATION
# =============================================================================
# This file contains MongoDB specific variables
# It inherits common variables from ../common.env

# MongoDB Configuration
MONGODB_VERSION=6.0
MONGODB_REPLICAS=1
MONGODB_STORAGE_SIZE=10Gi
MONGODB_STORAGE_CLASS=default

# Resource Limits
MONGODB_MEMORY_REQUEST=256Mi
MONGODB_MEMORY_LIMIT=1Gi
MONGODB_CPU_REQUEST=250m
MONGODB_CPU_LIMIT=500m

# MongoDB Root Credentials
MONGODB_USER=admin
MONGODB_PASSWORD=admin
MONGODB_NAME=legend
MONGODB_URI=mongodb://admin:admin@mongodb:27017/legend?authSource=admin

# MongoDB Connection Pool
MONGO_MAX_POOL_SIZE=100
MONGO_MIN_POOL_SIZE=10
MONGO_MAX_IDLE_TIME_MS=120000

# Backup Configuration
MONGO_BACKUP_ENABLED=false
MONGO_BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
MONGO_BACKUP_RETENTION_DAYS=7

# Service Configuration
MONGODB_SERVICE_TYPE=ClusterIP
MONGODB_PORT=27017

# Health Check
MONGODB_HEALTH_CHECK_ENABLED=true
MONGODB_HEALTH_CHECK_INTERVAL=10

# MongoDB Session Configuration
MONGODB_SESSION_ENABLED=false
MONGODB_SESSION_STORE=false
MONGODB_SESSION_COLLECTION=sessions