# =============================================================================
# LEGEND GUARDIAN AGENT SPECIFIC CONFIGURATION
# =============================================================================
# This file contains Guardian Agent specific variables
# It inherits common variables from ../common.env

# Service Configuration
GUARDIAN_HOST=0.0.0.0
GUARDIAN_PORT=8000
GUARDIAN_URL=https://legend-guardian.azure-legend.com
GUARDIAN_API_HOST=0.0.0.0
GUARDIAN_API_PORT=8000

# API Configuration
GUARDIAN_API_PREFIX=/api/v1
GUARDIAN_API_DEBUG=false

# Security
VALID_API_KEYS=key1,key2,key3
GUARDIAN_API_KEY=demo-key
LEGEND_API_KEY=demo-key

# Legend Services to Monitor
GUARDIAN_ENGINE_URL=http://legend-engine:6300
GUARDIAN_SDLC_URL=http://legend-sdlc:6100

# Resource Limits
GUARDIAN_MEMORY_REQUEST=256Mi
GUARDIAN_MEMORY_LIMIT=512Mi
GUARDIAN_CPU_REQUEST=100m
GUARDIAN_CPU_LIMIT=250m

# Service-specific settings
GUARDIAN_REPLICAS=1
GUARDIAN_HEALTH_CHECK_PATH=/health
GUARDIAN_READINESS_PROBE_PATH=/health
GUARDIAN_LIVENESS_PROBE_PATH=/health

# Agent Configuration
GUARDIAN_LOG_LEVEL=INFO
GUARDIAN_MEMORY_LIMIT=1000  # Max entries in memory
GUARDIAN_ANALYSIS_TIMEOUT=30  # Seconds
GUARDIAN_EXECUTION_TIMEOUT=60  # Seconds

# Monitoring
GUARDIAN_METRICS_ENABLED=true
GUARDIAN_METRICS_PORT=9090