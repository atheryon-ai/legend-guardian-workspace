# =============================================================================
# Local Development Environment Template
# =============================================================================
# Copy to .env.local in the repository root
# This configuration is for local development with Docker Compose

DEPLOYMENT_ENV=local

# GitLab OAuth (required)
GITLAB_APP_ID=<YOUR-GITLAB-APP-ID>
GITLAB_APP_SECRET=<YOUR-GITLAB-SECRET>
GITLAB_HOST=gitlab.com

# Local service URLs
LEGEND_ENGINE_URL=http://localhost:6300
LEGEND_SDLC_URL=http://localhost:6100
LEGEND_STUDIO_URL=http://localhost:9000

# Local MongoDB
MONGODB_USER=admin
MONGODB_PASSWORD=changeme
MONGODB_DATABASE=legend
MONGODB_HOST=localhost
MONGODB_URI=mongodb://admin:changeme@localhost:27017/legend?authSource=admin