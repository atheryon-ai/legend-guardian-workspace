# Local Development Environment Variables
# Copy this file to .env and update with your values

# Legend Service Versions
LEGEND_ENGINE_VERSION=4.40.3
LEGEND_SDLC_VERSION=0.195.0
LEGEND_STUDIO_VERSION=13.113.0

# Port Configuration
LEGEND_ENGINE_PORT=6300
LEGEND_SDLC_PORT=6100
LEGEND_STUDIO_PORT=9000

# GitLab OAuth (Required for SDLC)
# Get these from: https://gitlab.com/-/profile/applications
GITLAB_HOST=gitlab.com
GITLAB_APP_ID=your-gitlab-app-id
GITLAB_APP_SECRET=your-gitlab-app-secret

# API Keys (for Guardian Agent)
LEGEND_API_KEY=demo-key
VALID_API_KEYS=demo-key,test-key

# MongoDB Configuration (for advanced users)
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=admin
MONGO_DATABASE=legend