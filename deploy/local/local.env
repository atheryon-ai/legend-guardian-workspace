# =============================================================================
# LOCAL DEVELOPMENT CONFIGURATION OVERRIDES
# =============================================================================
# This file contains only local-specific overrides.
# It is sourced AFTER base.env by deployment scripts.
# Only include values that differ from base.env

# =============================================================================
# DEPLOYMENT ENVIRONMENT
# =============================================================================
DEPLOYMENT_ENV=local

# =============================================================================
# LOCAL SERVICE URLS
# =============================================================================
LEGEND_ENGINE_URL=http://localhost:6300
LEGEND_SDLC_URL=http://localhost:6100
LEGEND_STUDIO_URL=http://localhost:9000

# For Docker Compose internal networking
LEGEND_ENGINE_INTERNAL_URL=http://legend-engine:6300
LEGEND_SDLC_INTERNAL_URL=http://legend-sdlc:6100
LEGEND_STUDIO_INTERNAL_URL=http://legend-studio:9000

# =============================================================================
# LOCAL MONGODB CONFIGURATION
# =============================================================================
# Local MongoDB in Docker
MONGODB_URI=mongodb://admin:admin@mongodb:27017/legend?authSource=admin
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=admin
MONGO_DATABASE=legend

# =============================================================================
# GUARDIAN AGENT CONFIGURATION (Local)
# =============================================================================
LEGEND_API_KEY=demo-key
VALID_API_KEYS=demo-key,test-key
LEGEND_API_DEBUG=true
LEGEND_API_HOST=0.0.0.0
LEGEND_API_PORT=8000

# =============================================================================
# LOCAL RESOURCE LIMITS (Lower for local development)
# =============================================================================
ENGINE_MEMORY_REQUEST=256Mi
ENGINE_MEMORY_LIMIT=1Gi
ENGINE_CPU_REQUEST=100m
ENGINE_CPU_LIMIT=500m
ENGINE_REPLICAS=1

SDLC_MEMORY_REQUEST=256Mi
SDLC_MEMORY_LIMIT=512Mi
SDLC_CPU_REQUEST=100m
SDLC_CPU_LIMIT=250m
SDLC_REPLICAS=1

STUDIO_MEMORY_REQUEST=128Mi
STUDIO_MEMORY_LIMIT=256Mi
STUDIO_CPU_REQUEST=50m
STUDIO_CPU_LIMIT=200m
STUDIO_REPLICAS=1

# =============================================================================
# LOCAL JAVA OPTIONS (Less memory for local)
# =============================================================================
ENGINE_JAVA_OPTS="-Xmx750m -Xms500m ${JAVA_OPTS_COMMON}"
SDLC_JAVA_OPTS="-Xmx500m -Xms256m ${JAVA_OPTS_COMMON}"

# =============================================================================
# DOCKER COMPOSE SETTINGS
# =============================================================================
COMPOSE_PROFILES=full  # Options: core, full, guardian
COMPOSE_PROJECT_NAME=legend-local

# =============================================================================
# LOCAL DEVELOPMENT SETTINGS
# =============================================================================
NODE_ENV=development
LOG_LEVEL=DEBUG
ENABLE_MONITORING=false
ENABLE_TLS=false