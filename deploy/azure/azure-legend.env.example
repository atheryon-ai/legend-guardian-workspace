# =============================================================================
# AZURE INFRASTRUCTURE CONFIGURATION
# =============================================================================
# Azure Resource Configuration
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_RESOURCE_GROUP=your-resource-group-name
AZURE_LOCATION=eastus
AZURE_AKS_CLUSTER=your-aks-cluster-name
AZURE_ACR_NAME=your-acr-name
AZURE_ACR_LOGIN_SERVER=your-acr-name.azurecr.io

# =============================================================================
# LEGEND SERVICE CONFIGURATION
# =============================================================================
# Legend Service URLs (Update with your Azure endpoints)
LEGEND_ENGINE_URL=https://legend-engine.your-domain.com
LEGEND_SDLC_URL=https://legend-sdlc.your-domain.com
LEGEND_STUDIO_URL=https://legend-studio.your-domain.com

# Legend Service Ports
LEGEND_ENGINE_PORT=6300
LEGEND_SDLC_PORT=6100
LEGEND_STUDIO_PORT=9000

# Legend Service Hosts
LEGEND_ENGINE_HOST=0.0.0.0
LEGEND_SDLC_HOST=0.0.0.0
LEGEND_STUDIO_HOST=0.0.0.0

# =============================================================================
# MONGODB CONFIGURATION
# =============================================================================
# Azure MongoDB Configuration
MONGODB_URI=mongodb://admin:[PASSWORD]@mongo-legend-[UNIQUE_SUFFIX].mongo.cosmos.azure.com:10255/legend?ssl=true&replicaSet=globaldb&retrywrites=false&maxIdleTimeMS=120000&appName=@mongo-legend-[UNIQUE_SUFFIX]@
MONGODB_NAME=legend
MONGODB_SESSION_ENABLED=false
MONGODB_SESSION_STORE=false
MONGODB_SESSION_COLLECTION=sessions

# =============================================================================
# GITLAB OAUTH CONFIGURATION
# =============================================================================
# GitLab OAuth Configuration (Update redirect URIs for Azure)
GITLAB_APP_ID=your-gitlab-app-id
GITLAB_APP_SECRET=your-gitlab-app-secret
GITLAB_HOST=gitlab.com

# Azure-specific OAuth Redirect URIs (Update these in GitLab)
# Go to GitLab > User Settings > Applications > Your Legend App
# Update the redirect URI to: https://legend-sdlc.your-domain.com/api/pac4j/login/callback

# =============================================================================
# KUBERNETES CONFIGURATION
# =============================================================================
# Kubernetes Namespace
K8S_NAMESPACE=legend
K8S_NAMESPACE_SYSTEM=legend-system
K8S_INGRESS_CLASS=nginx

# AKS Configuration
AKS_NODE_COUNT=2
AKS_VM_SIZE=Standard_DS2_v2
AKS_MIN_NODES=1
AKS_MAX_NODES=5
AKS_KUBERNETES_VERSION=1.28.0

# Network Configuration
AKS_SERVICE_CIDR=10.0.0.0/16
AKS_DNS_SERVICE_IP=10.0.0.10
AKS_NETWORK_PLUGIN=azure
AKS_NETWORK_POLICY=azure

# =============================================================================
# LEGEND VERSIONS
# =============================================================================
# Legend Service Versions
LEGEND_ENGINE_VERSION=4.40.3
LEGEND_SDLC_VERSION=0.195.0
LEGEND_STUDIO_VERSION=13.113.0

# =============================================================================
# RESOURCE LIMITS AND SCALING
# =============================================================================
# Container Resource Limits
ENGINE_MEMORY_REQUEST=512Mi
ENGINE_MEMORY_LIMIT=1Gi
ENGINE_CPU_REQUEST=250m
ENGINE_CPU_LIMIT=500m

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================
# Environment Settings
NODE_ENV=production
LOG_LEVEL=INFO
ENABLE_MONITORING=true

# Azure Container Registry Authentication
AZURE_ACR_USERNAME=your-acr-username
AZURE_ACR_PASSWORD=your-acr-password

# =============================================================================
# TLS AND DOMAIN CONFIGURATION
# =============================================================================
# TLS Configuration
ENABLE_TLS=true
TLS_CERT_EMAIL=your-email@domain.com
TLS_CERT_DOMAIN=legend.your-domain.com

# =============================================================================
# METADATA PURE CONFIGURATION
# =============================================================================
# Metadata Pure Settings
METADATA_PURE_HOST=localhost
METADATA_PURE_PORT=6300
METADATA_PURE_PATH=/api
