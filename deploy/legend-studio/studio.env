# =============================================================================
# LEGEND STUDIO SPECIFIC CONFIGURATION
# =============================================================================
# This file contains Legend Studio specific variables
# It inherits common variables from ../common.env

# Service Configuration
LEGEND_STUDIO_HOST=0.0.0.0
LEGEND_STUDIO_PORT=9000
LEGEND_STUDIO_URL=https://legend-studio.azure-legend.com

# Backend Services URLs (for Studio to connect to)
STUDIO_ENGINE_URL=http://legend-engine:6300
STUDIO_SDLC_URL=http://legend-sdlc:6100

# React App Environment Variables (for browser)
REACT_APP_LEGEND_ENGINE_URL=https://legend-engine.azure-legend.com
REACT_APP_LEGEND_SDLC_URL=https://legend-sdlc.azure-legend.com

# Resource Limits
STUDIO_MEMORY_REQUEST=256Mi
STUDIO_MEMORY_LIMIT=512Mi
STUDIO_CPU_REQUEST=100m
STUDIO_CPU_LIMIT=500m

# Service-specific settings
STUDIO_REPLICAS=1
STUDIO_HEALTH_CHECK_PATH=/
STUDIO_READINESS_PROBE_PATH=/
STUDIO_LIVENESS_PROBE_PATH=/

# Studio Protocol and Theme
STUDIO_PROTOCOL=https
STUDIO_ENABLE_ANALYTICS=false
STUDIO_ENABLE_TELEMETRY=false
STUDIO_THEME=light

# Studio Configuration
STUDIO_ENABLE_ANALYTICS=false
STUDIO_ENABLE_TELEMETRY=false
STUDIO_THEME=light