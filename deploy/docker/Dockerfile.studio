# Legend Studio Dockerfile for Azure
FROM finos/legend-studio:13.113.0

# Set environment variables for Azure deployment
ENV PROTOCOL=https
ENV DEPOT_HOST=localhost
ENV DEPOT_PORT=8080

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:9000/ || exit 1

# Expose port
EXPOSE 9000

# Default command
CMD ["npm", "start"]
