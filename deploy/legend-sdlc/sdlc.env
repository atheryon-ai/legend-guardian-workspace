# =============================================================================
# LEGEND SDLC SPECIFIC CONFIGURATION
# =============================================================================
# This file contains Legend SDLC specific variables
# It inherits common variables from ../common.env

# Service Configuration
LEGEND_SDLC_HOST=0.0.0.0
LEGEND_SDLC_PORT=6100
LEGEND_SDLC_ADMIN_PORT=6101
LEGEND_SDLC_URL=https://legend-sdlc.azure-legend.com

# Resource Limits
SDLC_MEMORY_REQUEST=512Mi
SDLC_MEMORY_LIMIT=2Gi
SDLC_CPU_REQUEST=500m
SDLC_CPU_LIMIT=1000m

# Java Options
SDLC_JAVA_OPTS=-Xmx1500m -Xms1000m ${JAVA_OPTS_COMMON}

# GitLab OAuth Configuration
SDLC_GITLAB_REDIRECT_URI=https://legend-sdlc.azure-legend.com/api/auth/callback

# Project Configuration
SDLC_PROJECT_GROUP_PATTERN=^org\\.finos\\.legend\\..+
SDLC_PROJECT_ARTIFACT_PATTERN=^[a-z][a-z0-9_]*$

# Session Configuration
SDLC_SESSION_ENABLED=true
SDLC_SESSION_COLLECTION=sdlc_sessions
SDLC_SESSION_TIMEOUT=3600

# Service-specific settings
SDLC_REPLICAS=1
SDLC_HEALTH_CHECK_PATH=/api/info
SDLC_READINESS_PROBE_PATH=/api/info
SDLC_LIVENESS_PROBE_PATH=/api/info

# MongoDB Session Configuration
MONGODB_SESSION_ENABLED=true
MONGODB_SESSION_STORE=true
MONGODB_SESSION_COLLECTION=sdlc_sessions